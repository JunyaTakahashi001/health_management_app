<p id="notice"><%= notice %></p>

<div class="d-flex align-items-center">
  <h1><%= @month.year %> 年 <%= @month.month %>月 健康状態登録一覧</h1>
  <div class="ml-auto">
    <%= link_to '登録', new_users_health_path, class: 'btn btn-outline-dark' %>
    <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'btn btn-outline-dark' %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary"><%= flash[:notice] %></div>
<% end %>
<div>
  <p>氏名：<%= current_user.email %></p>
  <%= link_to "<前月", users_healths_path(month:@month.prev_month) %>
  <%= link_to "次月>", users_healths_path(month:@month.next_month) %>
</div>

<div class='index'>
 <div class='col-mid-12'>
  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th>日付</th>
        <th>体温（朝）</th>
        <th>体温（夕）</th>
        <th>咳嗽</th>
        <th>呼吸困難</th>
        <th>鼻汁・鼻閉</th>
        <th>咽頭痛</th>
        <th>頭痛</th>
        <th>下痢</th>
        <th>味覚異常</th>
        <th>嗅覚異常</th>
        <th>その他</th>
        <th>更新</th>
        <th>行動記録</th>
        <th>更新</th>
      </tr>
    </thead>

    <tbody>
      <% @users_healths.each do |users_health| %>
        <tr>
          <td><%= users_health.date.day %>日</td>
          <td><%= users_health.temperature_morning %></td>
          <td><%= users_health.temperature_night %></td>
          <td><%= users_health.cough %></td>
          <td><%= users_health.dyspnea %></td>
          <td><%= users_health.nasal %></td>
          <td><%= users_health.throat %></td>
          <td><%= users_health.headache %></td>
          <td><%= users_health.diarrhea %></td>
          <td><%= users_health.taste %></td>
          <td><%= users_health.smell %></td>
          <td><%= users_health.ather %></td>
          <%# <td> link_to 'Show', [:users, users_health] </td> %>
          <td><%= link_to 'Edit', edit_users_health_path(users_health) %></td>
          <td></td>
          <td></td>
          <%# link_to 'Destroy', [:users, users_health], method: :delete, data: { confirm: 'Are you sure?' } %>
        </tr>
      <% end %>
    </tbody>
  </div>
</div>