<div class='index'>
 <div class='col-mid-12'>
  <table class="table table-striped">
    <thead class="thead-light">
      <tr>
        <th>No</th>
        <th>出発時刻</th>
        <th>到着時刻</th>
        <th>行先</th>
        <th>移動方法</th>
        <th>出発地</th>
        <th>到着（帰着）地</th>
        <th>同行者・同席者</th>
        <th>ありの場合は間柄等を記入</th>
        <th>特記事項</th>
      </tr>
    </thead>
    <%= form_with(model: @actlog, local: true, url: @path) do |f| %>
    <tbody>
      <tr>
        <td><%= f.text_field :renge, :size=>"2", disabled: true %></td>
        <td><%= f.time_field :start_time, class: 'form-control' %></td>
        <td><%= f.time_field :end_time, class: 'form-control' %></td>
        <td><%= f.text_field :destination, :size=>"8" %></td>
        <td><%= f.text_field :transportation, :size=>"8" %></td>
        <td><%= f.text_field :departure, :size=>"8" %></td>
        <td><%= f.text_field :arrival, :size=>"8" %></td>
        <td>
          <%= f.radio_button :attendees, "あり", {} %> あり
          <%= f.radio_button :attendees, "なし", {} %> なし
        </td>
        <td><%= f.text_field :attendees_details, :size=>"8" %></td>
        <td><%= f.text_field :other, :size=>"8" %></td>
        <%= f.hidden_field :user_id %>
        <%= f.hidden_field :health_id %>
        <%= f.hidden_field :date %>
        <%= f.hidden_field :renge %>
        <%= f.submit "登録", class: 'btn btn-primary' %>
      </tr>
    </tbody>
    <% end %>
  </table>
 </div>
</div>